<!-- app/views/title_basics/index.html.erb -->
<div class="w-full overflow-x-auto">
  <%= paginate @movies, window: 0, left: 1, right: 1 %>
  <table class="w-full table table-xs table-zebra">
    <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Start Year</th>
      <th>End Year</th>
      <th>Genre</th>
      <th>Average Rating</th>
      <th>Number of Votes</th>
    </tr>
  </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.primarytitle %></td>
          <td><%= movie.titletype %></td>
          <td><%= movie.startyear %></td>
          <td><%= movie.endyear %></td>
          <td><%= movie.genres %></td>
          <td><%= movie.rating&.averagerating %></td>
          <td><%= movie.rating&.numvotes %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
